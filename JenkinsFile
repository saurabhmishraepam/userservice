pipeline {
    agent any
    stages {
        stage('Compile Stage') {
            steps {

                withMaven(maven:'M3'){
                	echo 'Started Compile Stage...';
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                	bat "mvn clean"
                }
            }
        }

         stage('Test Stage') {
            steps {

                withMaven(maven:'M3'){
                	echo 'Started Test Stage...'
                	bat "mvn test"
                }
            }
        }

           stage('Deploy Stage') {
            steps {

                withMaven(maven:'M3'){
                	echo 'Started Deploy Stage...'
                	bat "mvn install"
                }
            }
        }

    }
}