pipeline {
    agent any
    stages {
        stage('Compile Stage') {
            steps {

                withMaven(maven:'M3'){
                	echo 'Started Compile Stage...';
                    echo "PATH = ${PATH}"
                    echo "M2_HOME = ${M2_HOME}"
                	bat "mvn clean"
                }
            }
        }

        stage('Test Stage') {
            steps {

                withMaven(maven:'M3'){
                	echo 'Started Test Stage...'
                	bat "mvn test"
                }
            }
        }

        stage('Build Artifact Stage') {
            steps {
                withMaven(maven:'M3'){
                echo 'Started Build Artifact Stage...'
                bat "mvn install"
                }
            }
        }

        stage('Deploy Book Service') {
            steps {
                withMaven(maven:'M3'){
                echo 'Started Deploy Stage...'
                bat "mvn spring-boot:run"
                }
            }
        }

    }
}